  <style>
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial;max-width:900px;margin:24px auto;padding:0 18px;color:#0b1320}
    h1{font-size:1.6rem;margin-bottom:0}
    .question{margin:18px 0;padding:12px;border-radius:8px;background:#f7fbff}
    .choices{margin:8px 0}
    .choices label{display:block;margin:4px 0;cursor:pointer;padding:4px 6px;border-radius:6px;}
    .feedback{margin-top:8px;padding:6px 10px;border-radius:6px;display:none}
    .correct{background:#e6f9ee;color:#065f46}
    .incorrect{background:#fde8e8;color:#991b1b}
    .btn{background:#0b63d3;color:white;border:none;padding:6px 10px;border-radius:6px;cursor:pointer;margin-top:8px;margin-right:6px}
    .score{margin:20px 0;padding:12px;border-radius:8px;background:#fff7e6;font-weight:bold}
    .choice-correct{background:#d1fae5;color:#065f46}
    .choice-wrong{background:#fee2e2;color:#991b1b}
    .disabled label{cursor:default}
  </style>
</head>
<body>
  <h1>Purine and Pyrimidine Metabolism — 40 Multiple Choice Questions (A–E)</h1>
  <p>Select an answer and click <strong>Check</strong> to see if you are correct. At the bottom, click <strong>Show Score</strong> to tally results. Use <strong>Reset Quiz</strong> to start over.</p>

  <div id="questions">

    <div class="question" id="q1">
      <strong>1.</strong> Which pyrimidine is found only in RNA?
      <div class="choices">
        <label><input type="radio" name="q1" value="A"> A. Uracil</label>
        <label><input type="radio" name="q1" value="B"> B. Cytosine</label>
        <label><input type="radio" name="q1" value="C"> C. Thymine</label>
        <label><input type="radio" name="q1" value="D"> D. Adenine</label>
        <label><input type="radio" name="q1" value="E"> E. Guanine</label>
      </div>
      <button class="btn" onclick="checkAnswer('q1')">Check</button>
      <div class="feedback" id="fb-q1"></div>
    </div>

    <div class="question" id="q2">
      <strong>2.</strong> Which of the following pairs are both pyrimidines?
      <div class="choices">
        <label><input type="radio" name="q2" value="A"> A. Adenine and Guanine</label>
        <label><input type="radio" name="q2" value="B"> B. Adenine and Thymine</label>
        <label><input type="radio" name="q2" value="C"> C. Cytosine and Guanine</label>
        <label><input type="radio" name="q2" value="D"> D. Cytosine and Uracil</label>
        <label><input type="radio" name="q2" value="E"> E. Guanine and Thymine</label>
      </div>
      <button class="btn" onclick="checkAnswer('q2')">Check</button>
      <div class="feedback" id="fb-q2"></div>
    </div>

    <!-- Questions 3–40 follow same structure -->

  </div>

  <div class="score">
    <button class="btn" onclick="showScore()">Show Score</button>
    <button class="btn" onclick="resetQuiz()">Reset Quiz</button>
    <div id="scoreText"></div>
  </div>

  <script>
    let correctAnswers = {
      q1:"A", q2:"D", q3:"A", q4:"C", q5:"D", q6:"B", q7:"A", q8:"B", q9:"C", q10:"E",
      q11:"C", q12:"B", q13:"B", q14:"C", q15:"B", q16:"B", q17:"B", q18:"B", q19:"B", q20:"B",
      q21:"C", q22:"A", q23:"B", q24:"B", q25:"B", q26:"B", q27:"B", q28:"C", q29:"B", q30:"B",
      q31:"A", q32:"B", q33:"B", q34:"B", q35:"E", q36:"B", q37:"B", q38:"D", q39:"C", q40:"C"
    };

    let score = {};

    function checkAnswer(qid){
      let questionDiv = document.getElementById(qid);
      if(questionDiv.classList.contains('disabled')) return; // prevent re-checking

      let selected = document.querySelector('input[name="'+qid+'"]:checked');
      let fb = document.getElementById('fb-'+qid);
      let labels = document.querySelectorAll('#'+qid+' .choices label');

      // Reset all choice styling
      labels.forEach(l => l.classList.remove('choice-correct','choice-wrong'));

      if(!selected){
        fb.style.display = 'block';
        fb.className = 'feedback incorrect';
        fb.textContent = 'Please select an answer.';
        return;
      }

      labels.forEach(label=>{
        let input = label.querySelector('input');
        if(input.value === correctAnswers[qid]){
          label.classList.add('choice-correct');
        } 
        if(selected.value === input.value && selected.value !== correctAnswers[qid]){
          label.classList.add('choice-wrong');
        }
      });

      if(selected.value===correctAnswers[qid]){
        fb.style.display = 'block';
        fb.className = 'feedback correct';
        fb.textContent = 'Correct!';
        score[qid] = true;
      } else {
        fb.style.display = 'block';
        fb.className = 'feedback incorrect';
        fb.textContent = 'Incorrect.';
        score[qid] = false;
      }

      // Disable further changes
      let inputs = questionDiv.querySelectorAll('input');
      inputs.forEach(input=> input.disabled = true);
      questionDiv.classList.add('disabled');
    }

    function showScore(){
      let total=Object.keys(correctAnswers).length;
      let correctCount=0;
      for(let q in correctAnswers){
        if(score[q]) correctCount++;
      }
      document.getElementById('scoreText').textContent = "You got "+correctCount+" out of "+total+" correct.";
    }

    function resetQuiz(){
      // Reset all questions
      let questions = document.querySelectorAll('.question');
      questions.forEach(q=>{
        q.classList.remove('disabled');
        let inputs = q.querySelectorAll('input');
        inputs.forEach(input=>{
          input.disabled = false;
          input.checked = false;
        });
        let labels = q.querySelectorAll('label');
        labels.forEach(l=>{
          l.classList.remove('choice-correct','choice-wrong');
        });
        let fb = q.querySelector('.feedback');
        fb.style.display='none';
        fb.textContent='';
      });
      // Clear score
      score = {};
      document.getElementById('scoreText').textContent='';
    }
  </script>
</body>
</html>
